    "editor.insertSpaces": true,
    "files.exclude": {
        "lib": true
    },
    "search.exclude": {
        "lib": true,
        "node_modules": true
    },
    "npm.enableScriptExplorer": true,
    "npm.scriptExplorerAction": "run"
}